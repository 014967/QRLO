<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">



    <!-- 상단 배경 이미지 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:background="@drawable/login_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/welcome"
            android:textColor="@color/dark_gray"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:orientation="vertical"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/assignment1"
                android:textColor="@color/light_gray"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/assginment2"
                android:textColor="@color/dark_gray" />
        </LinearLayout>


        <!-- 모바일 버튼 -->
        <Button
            android:id="@+id/btn_join_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/phone"
            android:textColor="#727272"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:textAllCaps="false"
            android:background="@drawable/round_rec_yellow"

            style="?android:attr/borderlessButtonStyle"/>



        <Button
            android:id="@+id/btn_join_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/facebook"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:textAllCaps="false"
            android:background="@drawable/round_rec_deep_blue"


            android:drawableRight="@drawable/img_facebook_custom"
            android:paddingRight="23dp"


            style="?android:attr/borderlessButtonStyle"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_join_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/qrlo"
            android:textColor="@color/light_gray"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="25dp"/>



    </LinearLayout>
</LinearLayout>