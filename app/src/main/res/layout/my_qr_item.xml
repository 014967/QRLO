<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/my_qr_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"/>
    <TextView
        android:id="@+id/my_qr_item_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_toRightOf="@id/my_qr_item_image"
        android:layout_alignTop="@id/my_qr_item_image"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/my_qr_item_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:layout_toRightOf="@id/my_qr_item_image"
        android:layout_alignBottom="@id/my_qr_item_image"/>

</RelativeLayout>