<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/my_qr_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/my_qr_item_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_toRightOf="@id/my_qr_item_image"
        android:layout_alignTop="@id/my_qr_item_image"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="top"/>
    <TextView
        android:id="@+id/my_qr_item_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="15dp"
        android:layout_toRightOf="@id/my_qr_item_image"
        android:layout_alignBottom="@id/my_qr_item_image"
        android:gravity="bottom"/>

    <ImageView
        android:id="@+id/my_qr_item_image2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_how_to_reg_24g"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>