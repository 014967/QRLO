<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/myqr_bg">

    <ImageView
        android:id="@+id/bottom_notice_item_image"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/qrlo_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/bottom_notice_item_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:textSize="23dp" />
    <TextView
        android:id="@+id/bottom_notice_item_txt2"
        android:layout_below="@+id/bottom_notice_item_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="13dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="3dp"/>


</RelativeLayout>